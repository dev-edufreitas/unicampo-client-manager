            },
            "Endereco": {
                "required": [
                    "endereco",
                    "numero",
                    "bairro",
                    "cidade",
                    "uf"
                ],
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 1
                    },
                    "endereco": {
                        "type": "string",
                        "example": "Rua das Flores"
                    },
                    "numero": {
