                        "type": "string",
                        "example": "João Silva"
                    },
                    "data_nascimento": {
                        "type": "string",
                        "format": "date",
                        "example": "1990-01-01"
                    },
                    "tipo_pessoa": {
                        "type": "string",
                        "enum": [
                            "fisica",
                            "juridica"
                        ],
                        "example": "fisica"
                    },
                    "documento": {
                        "type": "string",
                        "example": "123.456.789-00"
                    },
                    "email": {
                        "type": "string",
                        "format": "email",
